.content
  .content__left
    .content__left--image
  .content__right
    .content__right__top
      = link_to event.title, event_path(event.id), class: "content__right__top--title"
    .content__right__bottom
      .content__right__bottom--userName
        = link_to event.user.nickname, user_path(event.user), class: "content__right__bottom--userName--btn"
      .content__right__bottom--date
        = event.created_at
